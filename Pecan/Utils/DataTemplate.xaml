<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Pecan.ViewModels"
                    xmlns:view="clr-namespace:Pecan.Views"
                    >

    <DataTemplate DataType="{x:Type vm:SaleVM}">
        <view:SalesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PurchaseVM}" >
        <view:PurchasesView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SupplierVM}" >
        <view:SuppliersView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ProductVM}" >
        <view:ProductsView />
    </DataTemplate>
    
</ResourceDictionary>